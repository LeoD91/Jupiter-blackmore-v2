{% extends 'base.html.twig' %}
{% block title %}Contactez nous{% endblock %}
{% block body %}
 <div class="container mt-5 pt-5">
     <div class="row">
           <div class="col-sm-8 offset-sm-2">
               <table class="table table-striped table-hover">
                   <thead>
                       <tr>
                           <th>Name</th>
                           <th>Email</th>
                           <th>Message</th>
                           <th>Actions</th>
                       </tr>
                   </thead>
                   <tbody>
                       {% for contact in contacts %}
                           <tr>
                               <td>{{ contact.name }}</td>
                               <td>{{ contact.email }}</td>
                               <td>{{ contact.message }}</td>
                                <td>
                                   <a href="{{ path('contact_edit', {id: contact.id}) }}" class="btn btn-primary">Edit</a>
                                   <a href="{{ path('contact_delete', {id: contact.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this contact?')">Delete</a>
                              </td>
                           </tr>
                       {% endfor %}
                   </tbody>
               </table>
           </div>
       </div>
   <div>   


{% endblock %}

